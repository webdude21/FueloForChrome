{
  "manifest_version": 2,

  "name": "Fuelo for Chrome",
  "author": "Dimo Petrov",
  "homepage_url": "https://github.com/webdude21/FueloForChrome",
  "description": "A Chrome extension for Fuelo's fuel price service",

  "version": "1.0.4",

  "browser_action": {
    "default_icon": "img/icon48.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "activeTab",
    "http://fuelo.net/api/"
  ]
}
